<section id="services" class="service-item">
       	<div class="container-fluid">
            <div class="center wow fadeInDown hidden-xs">
                <button type="button" class="btn btn-success btn-lg btn-block" data-toggle="modal" data-target="#myModal" id="event-name" style="background:black;border-color: black; "><h1 style="font-size: 4em;text-transform: uppercase; font-weight: bold"><%= @event.name %></h1></button>
  			   </div>
           <div class="center wow fadeInDown visible-xs">
                <button type="button" class="btn btn-success btn-lg btn-block" data-toggle="modal" data-target="#myModal" id="event-name" style="background:black;border-color: black; "><h1 style="font-size: 2.5em;text-transform: uppercase;"><%= @event.name %></h1></button>
           </div>
	     </div>
                <div class="modal fade" id="myModal" role="dialog">
    				<div class="modal-dialog">
      					<div class="modal-content">
        					<div class="modal-header">
          						<button type="button" class="close" data-dismiss="modal">&times;</button>
          						<h4 class="modal-title"><%= raw @event.name %></h4>
        					</div>
        					<div class="modal-body">
          						<p><%= raw @event.description %></p>
          						<div class="alert alert-danger">
									<center><strong>Hurry Up! Last date to register is <%= raw @event.last_date %> </strong></center><br>
								</div>
        					</div>
					        <div class="modal-footer">
					          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					        </div>
      					</div>
            		</div>
    			</div>

</section> 
